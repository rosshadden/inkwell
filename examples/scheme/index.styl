@import '../..'

/********************/
/* SETUP */
body
  background #999

.container
  width (60px + 20px + 2px) * 8
  margin 20px auto
  border-top 8px dashed black
  //border-radius 8px

  .box
    width 60px
    height 60px
    margin 10px
    float left
    border 1px dashed black
    border-radius 8px
    background #999

  br
    clear both

/********************/
/* THE MAGICSAUCE */
.one
  colors = scheme(#853f27, 2, 32)

  for color, c in colors
    .box:nth-of-type({c + 1})
      background color

      &:after
        content s("'%s'", color)
        color white if dark(color)
        color black if light(color)

.two
  colors = scheme(#963 #639, results: 16)

  for color, c in colors
