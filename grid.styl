generate-grid()
  .row
    margin-left -($gutter)
    *zoom 1

    &:before,
    &:after
      display table
      content ""

    &:after
      clear both

  [class*="span"]
    float left
    margin-left $gutter

  .container
    width $totalWidth

  for col in 1..$numColumns
    .span{col}
      column(col)

    .offset{col}
      offset(col)

    input.span{col},
    textarea.span{col},
    .uneditable-input.span{col}
      input(col)

  //  FORMS
  input[class*="span"],
  select[class*="span"],
  textarea[class*="span"],
  .uneditable-input[class*="span"]
    float: none
    margin-left 0
